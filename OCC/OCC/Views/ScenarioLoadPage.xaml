<Page x:Class="OCC.Views.ScenarioLoadPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OCC.Views"
      xmlns:ui="clr-namespace:Wpf.Ui.Controls;assembly=Wpf.Ui"
      mc:Ignorable="d" 
      d:DesignHeight="768" d:DesignWidth="1024"
      Background="#1A1D23"
      Title="ScenarioLoadPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- 좌측: 시나리오 목록 -->
        <ui:Card Grid.Row="0" Grid.Column="0"
                 Background="#23262E"
                 Margin="0,0,16,0"
                 Padding="18"
                 VerticalAlignment="Stretch"
                 HorizontalAlignment="Stretch">
            <DockPanel LastChildFill="True">
                <!-- 상단: 뒤로가기 버튼 -->
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,12">
                    <ui:Button Command="{Binding GoBackCommand}"
                               Width="110"
                               Height="36"
                               Appearance="Secondary"
                               Background="#263238"
                               Foreground="#4FC3F7"
                               FontWeight="SemiBold"
                               FontSize="14"
                               CornerRadius="16"
                               Padding="0"
                               HorizontalContentAlignment="Center"
                               VerticalContentAlignment="Center"
                               Margin="0,0,0,8">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Viewbox Width="16" Height="16" Margin="0,0,6,0" VerticalAlignment="Center">
                                <Path Data="M 12,2 L 4,10 L 12,18"
                                      Stroke="#4FC3F7"
                                      StrokeThickness="2"
                                      StrokeEndLineCap="Round"
                                      StrokeStartLineCap="Round"
                                      Fill="Transparent"/>
                            </Viewbox>
                            <TextBlock Text="뒤로가기"
                                       VerticalAlignment="Center"
                                       FontWeight="SemiBold"
                                       FontSize="14"
                                       Foreground="#4FC3F7"/>
                        </StackPanel>
                    </ui:Button>
                </StackPanel>
                <!-- 시나리오 목록 -->
                <GroupBox Header="시나리오 목록"
                          Background="#23262E"
                          BorderBrush="#37474F"
                          Foreground="#B0BEC5"
                          FontWeight="SemiBold"
                          FontSize="14"
                          Margin="0"
                          MinHeight="340"
                          MinWidth="480">
                    <ListBox ItemsSource="{Binding ScenarioCollection}"
                             SelectedItem="{Binding SelectedScenario, Mode=TwoWay}"
                             Background="#263238"
                             Foreground="#FFFFFF"
                             BorderThickness="0"
                             FontSize="14"
                             Margin="0"
                             Padding="4"
                             MinHeight="220">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="0,4">
                                    <TextBlock Text="[" Foreground="#4FC3F7"/>
                                    <TextBlock Text="{Binding scenario_id}" FontWeight="Bold" Foreground="#4FC3F7"/>
                                    <TextBlock Text="] " Foreground="#4FC3F7"/>
                                    <TextBlock Text="{Binding scenario_title}" Foreground="#FFFFFF"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </GroupBox>
            </DockPanel>
        </ui:Card>

        <!-- 우측: 컨트롤 영역 -->
        <ui:Card Grid.Row="0" Grid.Column="1"
                 Background="#23262E"
                 Padding="24"
                 VerticalAlignment="Center"
                 HorizontalAlignment="Center">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="180">
                <ui:Button Content="불러오기"
                           Command="{Binding LoadCommand}"
                           Width="150"
                           Height="40"
                           Appearance="Primary"
                           FontSize="15"
                           FontWeight="SemiBold"
                           Background="#263238"
                           Foreground="#FFFFFF"
                           CornerRadius="8"
                           Margin="0,0,0,10"/>
                <ui:Button Content="시작"
                           Command="{Binding StartCommand}"
                           Width="150"
                           Height="40"
                           FontSize="15"
                           FontWeight="SemiBold"
                           Background="#388E3C"
                           Foreground="#FFFFFF"
                           CornerRadius="8"
                           Margin="0,0,0,10"/>
                <!--<ui:Button Content="종료"
                           Command="{Binding QuitCommand}"
                           Width="150"
                           Height="40"
                           FontSize="15"
                           FontWeight="SemiBold"
                           Background="#B71C1C"
                           Foreground="#FFFFFF"
                           CornerRadius="8"/>-->
            </StackPanel>
        </ui:Card>
    </Grid>
</Page>