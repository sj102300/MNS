<Page x:Class="OCC.Views.InitPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OCC.Views"
      xmlns:ui="clr-namespace:Wpf.Ui.Controls;assembly=Wpf.Ui"
      mc:Ignorable="d" 
      d:DesignHeight="768" d:DesignWidth="1024"
      Background="#1A1D23"
      Title="InitPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="C:\Users\user\source\repos\MNS\OCC\OCC\images\background-img.png" Stretch="UniformToFill"/>
        </Grid.Background>

        <!-- 흐릿한 회색 오버레이 -->
        <Rectangle Fill="#B3202127"
           Panel.ZIndex="1"
           Opacity="0.5"
           IsHitTestVisible="False"
           HorizontalAlignment="Stretch"
           VerticalAlignment="Stretch"
           Grid.Row="0" Grid.Column="0"
           Grid.RowSpan="2" Grid.ColumnSpan="2"/>

        <!-- 좌측: 타이틀 및 설명 -->
        <ui:Card Grid.Row="0" Grid.RowSpan="2" Grid.Column="0"
                 Background="#23262E"
                 Margin="0,0,20,0"
                 Padding="24"
                 VerticalAlignment="Stretch"
                 HorizontalAlignment="Stretch">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="지대공 유도무기 시뮬레이터"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="#4FC3F7"
                           Margin="0 24 0 12"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="팀 오예스"
                           FontSize="14"
                           Foreground="#B0BEC5"
                           Margin="0 0 0 0"
                           TextWrapping="Wrap"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </ui:Card>

        <!-- 우측: 버튼 영역 -->
        <StackPanel Grid.Row="1" Grid.Column="1"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Width="220">
            <ui:Button Content="시나리오 생성"
                       Command="{Binding NavigateToScenarioCreateCommand}"
                       Width="200"
                       Height="40"
                       Appearance="Primary"
                       FontSize="15"
                       FontWeight="SemiBold"
                       Background="#263238"
                       Foreground="#FFFFFF"
                       CornerRadius="8"
                       Margin="0,0,0,10"/>
            <ui:Button Content="시나리오 불러오기"
                       Command="{Binding NavigateToScenarioLoadCommand}"
                       Width="200"
                       Height="40"
                       FontSize="15"
                       FontWeight="SemiBold"
                       Background="#4FC3F7"
                       Foreground="#23262E"
                       CornerRadius="8"/>
        </StackPanel>
    </Grid>
</Page>