<Page x:Class="OCC.Views.AircraftLogPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OCC.Views"
      xmlns:ui="clr-namespace:Wpf.Ui.Controls;assembly=Wpf.Ui"
      mc:Ignorable="d" 
      Background="#1A1D23"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AircraftLogPage">

    <Grid>
    <Grid.RowDefinitions>
        <RowDefinition Height="8.5*" />
        <RowDefinition Height="1.5*" />
    </Grid.RowDefinitions>
        
    <!-- 상단: 항공기 정보 표 -->
        <DataGrid Grid.Row="0"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  ItemsSource="{Binding AircraftList}"
                  IsReadOnly="True"
                  Margin="12"
                  HeadersVisibility="Column"
                  RowHeaderWidth="0">
        <DataGrid.Columns>
            <DataGridTextColumn Header="식별자" Binding="{Binding aircraft_id}" Width="*" />
            <DataGridTextColumn Header="위도" Binding="{Binding start_point.latitude}" Width="*" />
            <DataGridTextColumn Header="경도" Binding="{Binding start_point.longitude}" Width="*" />
            <DataGridTextColumn Header="고도" Binding="{Binding start_point.altitude}" Width="*" />
            <DataGridTextColumn Header="Impact 위도" Binding="{Binding impact_point.latitude}" Width="*" />
            <DataGridTextColumn Header="Impact 경도" Binding="{Binding impact_point.longitude}" Width="*" />
            <DataGridTextColumn Header="Impact 고도" Binding="{Binding impact_point.altitude}" Width="*" />
            <DataGridTextColumn Header="상태" Binding="{Binding status}" Width="*" />
        </DataGrid.Columns>
    </DataGrid>

    <!-- 하단: 버튼 및 라디오 그룹 -->
    <Grid Grid.Row="1" Margin="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <ui:Button Grid.Column="0" Content="발사"
                         Command="{Binding ManualFireCommand}"
                         Width="150"
                         Height="40"
                         FontSize="15"
                          Margin="12"
                          HorizontalAlignment="Left"
                         FontWeight="SemiBold"
                         Background="#B71C1C"
                         Foreground="#FFFFFF"
                         CornerRadius="8"/>
            
            <ui:Button Grid.Column="2" Content="자동 발사 모드 OFF"
                           Command="{Binding ChangeModeCommand}"
                           Width="150"
                           Height="40"
                           FontSize="15"
                            Margin="12"
                            HorizontalAlignment="Right"
                           FontWeight="SemiBold"
                           Background="#263238"
                           Foreground="#FFFFFF"
                           CornerRadius="8"/>
        </Grid>
    </Grid>
</Page>
