<Page x:Class="OCC.Views.MissileLogPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OCC.Views"
      xmlns:conv="clr-namespace:OCC.Converters"
      xmlns:wgif="http://wpfanimatedgif.codeplex.com"
      xmlns:ui="clr-namespace:Wpf.Ui.Controls;assembly=Wpf.Ui"
      mc:Ignorable="d" 
      Background="#1A1D23"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MissileLogPage">

    <Page.Resources>
        <conv:VisualStateToGifConverter x:Key="VisualStateToGifConverter"/>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2.8*" />
            <RowDefinition Height="6.2*" />
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <DataGrid Grid.Row="0"
          ItemsSource="{Binding MissileList}"
          SelectedItem="{Binding SelectedMissile, Mode=TwoWay}"
          AutoGenerateColumns="False"
          CanUserAddRows="False"
          CanUserDeleteRows="False"
          IsReadOnly="True"
          Margin="12"
          HeadersVisibility="Column"
          RowHeaderWidth="0"
          Background="#1E2A38"
          HorizontalScrollBarVisibility="Disabled"
          HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch"
          Foreground="#CCCCCC"
          GridLinesVisibility="Horizontal"
          BorderThickness="1"
          BorderBrush="#212e52"
          FontSize="14"
          FontWeight="SemiBold">
            
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#212e52"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <DataGrid.CellStyle>
                <Style TargetType="DataGridCell">
                    <Setter Property="Background" Value="#1E2A38"/>
                    <Setter Property="Foreground" Value="#CCCCCC"/>
                    <Setter Property="BorderBrush" Value="#212e52"/>
                    <Setter Property="FontSize" Value="18"/>
                    <Setter Property="BorderThickness" Value="0.5"/>
                    <Setter Property="Padding" Value="4,2"/>
                        <Setter Property="Foreground" Value="#CCCCCC"/>
                        <Setter Property="FontSize" Value="16"/>
                        <Setter Property="TextBlock.TextAlignment" Value="Center"/>
                        <Setter Property="TextBlock.HorizontalAlignment" Value="Center"/>
                        <Style.Triggers>

                            <!-- 비행중 -->
                            <DataTrigger Binding="{Binding MissileStatusText}" Value="비행중">
                            <Setter Property="Foreground" Value="#2da839"/>
                                <Setter Property="TextBlock.TextAlignment" Value="Center"/>
                            </DataTrigger>


                            <!-- 명중성공 / 자폭 / 비상폭파 -->
                            <DataTrigger Binding="{Binding MissileStatusText}" Value="명중성공">
                                <Setter Property="TextBlock.TextAlignment" Value="Center"/>
                                <Setter Property="Foreground" Value="#EF5350"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding MissileStatusText}" Value="자폭">
                            <Setter Property="TextBlock.TextAlignment" Value="Center"/>
                            <Setter Property="Foreground" Value="#EF5350"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding MissileStatusText}" Value="비상폭파">
                                <Setter Property="Foreground" Value="#EF5350"/>
                            <Setter Property="TextBlock.TextAlignment" Value="Center"/>
                        </DataTrigger>

                            <!-- 발사 요청 / 타겟 변경  / 유도 중-->
                            <DataTrigger Binding="{Binding MissileStatusText}" Value="발사 요청">
                            <Setter Property="Foreground" Value="#ffdb69"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding MissileStatusText}" Value="타겟 변경">
                            <Setter Property="TextBlock.TextAlignment" Value="Center"/>
                            <Setter Property="Foreground" Value="#ffdb69"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding MissileStatusText}" Value="유도 중">
                            <Setter Property="TextBlock.TextAlignment" Value="Center"/>
                            <Setter Property="Foreground" Value="#ffdb69"/>
                        </DataTrigger>

                        <!-- 발사전 -->
                            <DataTrigger Binding="{Binding MissileStatusText}" Value="발사전">
                            <Setter Property="TextBlock.TextAlignment" Value="Center"/>
                            <Setter Property="Foreground" Value="#e0e0e0"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
            </DataGrid.CellStyle>
            
            <DataGrid.Resources>
                <!-- 선택된 행의 스타일 -->
                <Style TargetType="DataGridRow">
                    <Setter Property="Background" Value="#1E2A38"/>
                    <Setter Property="Foreground" Value="#CCCCCC"/>
                    <Setter Property="FontWeight" Value="Normal"/>
                    <Setter Property="BorderBrush" Value="#2C3E50"/>
                    <Setter Property="BorderThickness" Value="0.5"/>
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Foreground" Value="Black"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.Resources>
            
            <DataGrid.Columns>
                <DataGridTextColumn Header="식별자" Binding="{Binding Id}" Width="*" />
                <DataGridTextColumn Header="위도(°)" Binding="{Binding Latitude, StringFormat=0.0000000}"  Width="*"/>
                <DataGridTextColumn Header="경도(°)" Binding="{Binding Longitude, StringFormat=0.0000000}"  Width="*"/>
                <DataGridTextColumn Header="고도(Km)" Binding="{Binding Altitude, StringFormat=0.0000000}"  Width="*"/>
                <DataGridTextColumn Header="상태" Binding="{Binding MissileStatusText}" Width="*" />
            </DataGrid.Columns>
        </DataGrid> 

        <!-- 하단(40%) 영역: Grid.Row="1" -->
        <Grid Grid.Row="1">
            <ListView Grid.Column="0"
              ItemsSource="{Binding MissileList}"
              SelectedItem="{Binding SelectedMissile, Mode=TwoWay}"
              Margin="4"
              Background="#1A1D23"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch"
              BorderThickness="0"
              ScrollViewer.HorizontalScrollBarVisibility="Disabled"
              ScrollViewer.VerticalScrollBarVisibility="Disabled"
              Height="Auto">
                <!-- 높이를 Stretch로 제한 -->

                <!-- 2행 3열로 고정 -->
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="3" Rows="2"/>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>

                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="VerticalContentAlignment" Value="Stretch"/>
                        <Setter Property="Height" Value="Auto"/>
                    </Style>
                </ListView.ItemContainerStyle>

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="4" ClipToBounds="False">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0"
                               Text="{Binding Id}"
                               FontWeight="Bold"
                               FontSize="16"
                               Foreground="#FFDDDDDD"
                               TextAlignment="Center"
                               HorizontalAlignment="Center"
                               Margin="0"/>

                            <Image Grid.Row="1"
                                Loaded="Image_Loaded"
                                Tag="{Binding VisualState, Converter={StaticResource VisualStateToGifConverter}, NotifyOnTargetUpdated=True}"
                                TargetUpdated="Image_TargetUpdated"
                                Stretch="Uniform"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                MaxWidth="{Binding ActualHeight, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Grid}}"
                                MaxHeight="{Binding ActualWidth, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Grid}}">
                                <Image.Source>
                                    <Binding Path="VisualState"
                                         Converter="{StaticResource VisualStateToGifConverter}"
                                         UpdateSourceTrigger="PropertyChanged" />
                                </Image.Source>
                            </Image>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
        <!-- 오른쪽 1/4 영역: 필요시 컨텐츠 추가 -->
        <StackPanel Grid.Row="2" Margin="12"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="WDL"
                Command="{Binding WdlCommand}"
                    Width="120"
                Height="40"
                Background="#37474F"
                Foreground="White"
                FontWeight="Bold"
                FontSize="15"
                Margin="0,0,8,0"/>
                    <Button Content="비상폭파"
                Command="{Binding EmergencyDestroyCommand}"
                Width="120"
                Height="40"
                Background="#B71C1C"
                Foreground="White"
                FontWeight="Bold"
                FontSize="15"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
