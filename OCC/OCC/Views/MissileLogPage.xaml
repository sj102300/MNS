<Page x:Class="OCC.Views.MissileLogPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OCC.Views"
      xmlns:ui="clr-namespace:Wpf.Ui.Controls;assembly=Wpf.Ui"
      mc:Ignorable="d" 
      Background="#1A1D23"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MissileLogPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="6*" />
            <RowDefinition Height="4*" />
        </Grid.RowDefinitions>
        <!-- 상단(60%) 영역: Grid.Row="0" -->
        <!--상단 항공기 정보 출력 (식별자, 위도 경도 고도, 상태, impactpoint의 위도 경도 고도)-->

        <DataGrid Grid.Row="0"
          ItemsSource="{Binding MissileList}"
          SelectedItem="{Binding SelectedMissile, Mode=TwoWay}"
          AutoGenerateColumns="False"
          CanUserAddRows="False"
          CanUserDeleteRows="False"
          IsReadOnly="True"
          Margin="20"
          HeadersVisibility="Column"
          RowHeaderWidth="0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="식별자" Binding="{Binding Id}" Width="*" />
                <DataGridTextColumn Header="위도" Binding="{Binding Latitude}" Width="*" />
                <DataGridTextColumn Header="경도" Binding="{Binding Longitude}" Width="*" />
                <DataGridTextColumn Header="고도" Binding="{Binding Altitude}" Width="*" />
                <DataGridTextColumn Header="상태" Binding="{Binding MissileStatusText}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>

        <!-- 하단(40%) 영역: Grid.Row="1" -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <!-- 왼쪽 3/4 영역: 3x2 표 -->
            <Grid Grid.Column="0" Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <!-- 6칸 예시 (내용은 필요에 따라 채우세요) -->
                <Border Grid.Row="0" Grid.Column="0" BorderBrush="Gray" BorderThickness="1"/>
                <Border Grid.Row="0" Grid.Column="1" BorderBrush="Gray" BorderThickness="1"/>
                <Border Grid.Row="0" Grid.Column="2" BorderBrush="Gray" BorderThickness="1"/>
                <Border Grid.Row="1" Grid.Column="0" BorderBrush="Gray" BorderThickness="1"/>
                <Border Grid.Row="1" Grid.Column="1" BorderBrush="Gray" BorderThickness="1"/>
                <Border Grid.Row="1" Grid.Column="2" BorderBrush="Gray" BorderThickness="1"/>
            </Grid>

            <!-- 오른쪽 1/4 영역: 필요시 컨텐츠 추가 -->
            <StackPanel Grid.Column="1" Margin="12"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    >
                <Button Content="비상폭파"
                    Command="{Binding EmergencyDestroyCommand}"
                    Width="120"
                    Height="40"
                    Background="#B71C1C"
                    Foreground="White"
                    FontWeight="Bold"
                    FontSize="15"
                    Margin="0,0,0,8"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
