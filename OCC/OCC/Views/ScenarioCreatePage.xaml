<Page x:Class="OCC.Views.ScenarioCreatePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OCC.Views"
      xmlns:gmap="clr-namespace:GMap.NET.WindowsPresentation;assembly=GMap.NET.WindowsPresentation"
      xmlns:ui="clr-namespace:Wpf.Ui.Controls;assembly=Wpf.Ui"
      mc:Ignorable="d" 
      d:DesignHeight="768" d:DesignWidth="1024"
      Background="#1A1D23"
      Title="ScenarioCreatePage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- 좌측: 지도 및 정보 -->
        <ui:Card Grid.Row="0" Grid.Column="0"
                 Background="#23262E"
                 Margin="0,0,16,0"
                 Padding="12"
                 VerticalAlignment="Stretch"
                 HorizontalAlignment="Stretch">
            <DockPanel LastChildFill="True">
                <!-- 상단:뒤로가기 버튼 -->
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="12,12,12,12">
                    <ui:Button Command="{Binding GoBackCommand}"
                               Width="110"
                               Height="36"
                               Appearance="Secondary"
                               Background="#263238"
                               Foreground="#4FC3F7"
                               FontWeight="SemiBold"
                               FontSize="14"
                               CornerRadius="16"
                               Padding="0"
                               HorizontalContentAlignment="Center"
                               VerticalContentAlignment="Center"
                               Margin="0,0,0,0">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Viewbox Width="13" Height="16" Margin="0,0,6,0" VerticalAlignment="Center">
                                <Path Data="M 12,2 L 4,10 L 12,18"
                                      Stroke="#4FC3F7"
                                      StrokeThickness="2"
                                      StrokeEndLineCap="Round"
                                      StrokeStartLineCap="Round"
                                      Fill="Transparent"/>
                            </Viewbox>
                            <TextBlock Text="뒤로가기"
                                       VerticalAlignment="Center"
                                       FontWeight="SemiBold"
                                       FontSize="14"
                                       Foreground="#4FC3F7"/>
                        </StackPanel>
                    </ui:Button>
                </StackPanel>
                <!-- 지도 -->
                <GroupBox Name="mapgroup"
                          Background="#23262E"
                          BorderBrush="#37474F"
                          Foreground="#B0BEC5"
                          FontWeight="SemiBold"
                          FontSize="14"
                          VerticalContentAlignment="Stretch"
                          HorizontalContentAlignment="Stretch"
                          Margin="12,0,12,12"
                          MinHeight="340"
                          MinWidth="480">
                    <gmap:GMapControl 
                        x:Name="mapControl" 
                        MouseLeftButtonUp="mapControl_MouseLeftButtonUp"
                        Zoom="13" 
                        MaxZoom="24" 
                        MinZoom="1"
                        Background="Transparent"
                        MinHeight="340"
                        MinWidth="480"/>
                </GroupBox>
            </DockPanel>
        </ui:Card>

        <!-- 우측: 컨트롤 영역 -->
        <ui:Card Grid.Row="0" Grid.Column="1"
                 Background="#23262E"
                 Padding="24"
                 VerticalAlignment="Center"
                 HorizontalAlignment="Center">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="180">
                <TextBlock Text="대상 선택"
                        FontSize="16"
                        FontWeight="Bold"
                        Foreground="#4FC3F7"
                        Margin="10"
                        HorizontalAlignment="Center"/>
                <ComboBox ItemsSource="{Binding Items}" 
                      SelectedItem="{Binding SelectedItem, Mode=TwoWay}" 
                      Width="160"
                      Height="40"
                      FontSize="15"
                      FontWeight="Bold"
                      Margin="0,0,0,0"
                      Background="#181A20"
                      Foreground="#4FC3F7" 
                      BorderBrush="#4FC3F7"
                      Padding="10,2">
                    <ComboBox.Resources>
                        <!-- 라운드 테두리 -->
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                        <!-- 드롭다운 아이콘 색상 -->
                        <Style TargetType="ToggleButton">
                            <Setter Property="Foreground" Value="#4FC3F7"/>
                            <Setter Property="Background" Value="Transparent"/>
                        </Style>
                        <!-- 드롭다운 아이템 하이라이트 -->
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="#4FC3F7"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#263238"/>
                                    <Setter Property="Foreground" Value="#4FC3F7"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#37474F"/>
                                    <Setter Property="Foreground" Value="#4FC3F7"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ComboBox.Resources>
                </ComboBox>
                <TextBlock Text="{Binding SelectedItem}" 
                    HorizontalAlignment="Center" 
                    Margin="0,0,0,18" 
                    FontSize="15"
                    FontWeight="Bold"
                    Foreground="{Binding MarkerColor}"/>
                <ui:Button Content="저장"
                    Command="{Binding SaveCommand}"
                    Width="160"
                    Height="40"
                    Appearance="Primary"
                    FontSize="15"
                    FontWeight="SemiBold"
                    Margin="10"
                    Background="#263238"
                    Foreground="#FFFFFF"
                    CornerRadius="8"/>
            </StackPanel>
        </ui:Card>
    </Grid>
</Page>