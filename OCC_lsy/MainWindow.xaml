<Window x:Class="OCC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OCC"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="350">
    <Grid Margin="10">
        <StackPanel>
            <Button Content="시나리오 조회" Height="40" Margin="0,0,0,10" Click="LoadScenarios_Click"/>
            <ListBox x:Name="ScenarioList" Height="240" Margin="0,0,0,10"/>
            <Button Content="시나리오 시작" Height="40" Margin="0,0,0,10" Click="SendStartSignal_Click"/>
        </StackPanel>
    </Grid>
</Window>
